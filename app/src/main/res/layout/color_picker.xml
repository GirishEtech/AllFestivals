<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myColorPicker"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_height="500dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/testBgColor"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@android:color/holo_blue_light"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.025" />

        <com.madrapps.pikolo.RGBColorPicker
            android:id="@+id/firstColor"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testBgColor"
            app:layout_constraintVertical_bias="0.503" />

        <TextView
            android:id="@+id/txtFirstColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left Color"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/firstColor"
            app:layout_constraintStart_toStartOf="@+id/firstColor"
            app:layout_constraintTop_toBottomOf="@+id/firstColor" />

        <com.madrapps.pikolo.RGBColorPicker
            android:id="@+id/secondColor"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginEnd="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testBgColor"
            app:layout_constraintVertical_bias="0.503" />

        <TextView
            android:id="@+id/txtSecondText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right Color"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/secondColor"
            app:layout_constraintStart_toStartOf="@+id/secondColor"
            app:layout_constraintTop_toBottomOf="@+id/secondColor" />

        <Button
            android:id="@+id/btnCencel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="CENCEL"
            android:layout_margin="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/firstColor"
            app:layout_constraintStart_toStartOf="@+id/firstColor"
            app:layout_constraintTop_toBottomOf="@+id/txtFirstColor"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="OK"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/secondColor"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/secondColor" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>